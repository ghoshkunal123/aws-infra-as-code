pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'This is build stage, nothing to build for python'
      }
    }

    stage('Test') {
      steps {
        echo 'This is test stage'
        sh '/usr/bin/python2.7 de/jenkins-test/src/integration_test.py'
        sh 'py.test --junitxml results.xml de/jenkins-test/src/integration_test.py'
      }
    }

    stage('Deploy') {
      steps {
        echo 'This deploy stage'
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'de/jenkins-test/src/*', fingerprint: true
    }
  }

}
