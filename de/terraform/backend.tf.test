#use s3 to store remote state
terraform {

  # bucket and dynamodb_table should be pre-created
  backend "s3" {
    bucket  = "com.fngn.test.terraform.us-west-1"
    key     = "analytics_finr/aws-infra-as-code/de/terraform/terraform.tfstate"
    region  = "us-west-1"
    encrypt = true

    dynamodb_table = "terraform-locks"
  }
}
